@using EntityLayer.Concrete
@model List<GalleryItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Görseller</h2>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive ">
                <table class="table caption-top">
                    <thead>
                        <tr class="border-5">
                            <th>ID</th>
                            <th>Görsel URL</th>
                          
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (Model != null)
                            {




                                <tr>
                                    <td>#</td>
                                    <td>@item.ImageUrl,</td>
                                    
                                    <td><a href="/Gallery/DeleteGallery/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Gallery/EditGallery/@item.ID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <a href="/Gallery/AddGallery/" class="btn btn-outline-info">Yeni Görsel Ekle</a>
            </div>
        </div>
    </div>
</div>


