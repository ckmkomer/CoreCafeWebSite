@model EntityLayer.Concrete.SpecialMealOffer
@{
    ViewData["Title"] = "AddMenuArea";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Haftanın Menüsü Ekleme Sayfası</h2>
<br />

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <form asp-controller="MenuArea" asp-action="AddMenuArea" method="post">
                <div class="form-group">
                    <label for="title">Başlık:</label>
                    <input type="text" class="form-control" asp-for="Title" />
                </div>
                <div class="form-group">
                    <label for="description">Açıklama:</label>
                    <input type="text" class="form-control" asp-for="Description" />
                </div>
                <div class="form-group">
                    <label for="price">Fiyat</label>
                    <input type="text" class="form-control" asp-for="Price" />
                </div>
                 <div class="form-group">
                    <label for="ımageurl">Görsel Yolu</label>
                    <input type="text" class="form-control" asp-for="ImageUrl" />
                </div>
                <div class="form-group">
                    <label for="categoryıd">Kategori</label>
                    <input type="text" class="form-control" asp-for="CategoryMenuID" />
                </div>

                <input type="hidden" asp-for="SpecialMealOfferID" />
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>
