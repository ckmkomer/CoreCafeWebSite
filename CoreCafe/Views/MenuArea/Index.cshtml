@using EntityLayer.Concrete
@model List<SpecialMealOffer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center"> Bu Haftanın Özel Menüsü</h2>
<br />
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">


            <div class="table-responsive ">
                <table class="table caption-top">
                    <thead>
                        <tr class="border-5">
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Fiyat</th>
                            <th>Görsel Yolu</th>
                            <th>Kategori</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {



                                                <tr>
                                                    <td>#</td>
                                                    <td>@item.Title</td>
                                                    <td>@item.Description</td>
                                                    <td>@item.Price</td>
                                                    <td>@item.ImageUrl</td>
                                                    <td>@item.CategoryMenuID</td>
                                                    

                                                    <td><a href="/MenuArea/DeleteMenuArea/@item.SpecialMealOfferID" class="btn btn-outline-danger">Sil</a></td>
                                                    <td><a href="/MenuArea/EditMenuArea/@item.SpecialMealOfferID" class="btn btn-outline-success">Güncelle</a></td>
                                                </tr>
                        }
                    </tbody>
                </table>
                <a href="/MenuArea/AddMenuArea/" class="btn btn-outline-info">Yeni Menü eEkle</a>
            </div>
        </div>
    </div>
</div>

