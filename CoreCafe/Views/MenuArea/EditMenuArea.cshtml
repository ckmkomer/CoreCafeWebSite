@model EntityLayer.Concrete.SpecialMealOffer
@{
    ViewData["Title"] = "EditMenuArea";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Haftanın Menüsü Düzenleme Sayfası</h2>
<br />
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <form method="post" action="/MenuArea/EditMenuArea">
                <div class="form-group">
                    <label for="name">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title" />
                </div>
                <div class="form-group">
                    <label for="specialization">Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description" />
                </div>
                 <div class="form-group">
                    <label for="specialization">Fiyat</label>
                    <input type="text" class="form-control" asp-for="Price" />
                </div>
                <div class="form-group">
                    <label for="specialization">Görsel Yolu</label>
                    <input type="text" class="form-control" asp-for="ImageUrl" />
                </div>
                <div class="form-group">
                    <label for="specialization">Kategori</label>
                    <input type="text" class="form-control" asp-for="CategoryMenuID"/>
                </div>
                <input type="hidden" asp-for="SpecialMealOfferID" />
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </form>
        </div>
    </div>
</div>





