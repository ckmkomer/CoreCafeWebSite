@using EntityLayer.Concrete
@model List<Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">Gelen Rezarvasyonlar</h1>
<br />

 <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">


            <div class="table-responsive ">
                <table class="table caption-top">
                    <thead>
                        <tr class="border-5">
                            <th>ID</th>
                            <th>Ad Soyad</th>
                            
                            <th>Mail</th>
                            <th>Kişi Sayısı</th>
                            <th>Tarih</th>
                            <th>Mesaj</th>
                           
                            
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {


                                                    <tr>
                                                        <td>#</td>
                                                        <td>@item.FullName</td>
                                                        <td>@item.Email</td>
                                                        <td>@item.Number</td>
                                                       
                                                        <td>@item.Date</td>
                                                        <td class="text-area">@item.Message</td>


                                                        
                                                        <td>
                                                    </tr>
                    }
                    </tbody>
                </table>
               
            </div>
        </div>
    </div>
</div>



