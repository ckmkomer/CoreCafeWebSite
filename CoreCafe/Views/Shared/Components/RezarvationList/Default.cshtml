@model ResarvationViewModel

@if(TempData["result"]!=null)
{
    <div>@TempData["result"]</div>
}

<div class="col-lg-6">
    <div class="contact-form">
        
        <form method="post" asp-controller="Default" asp-action="Resarvation">
            <div class="row">
                <div class="col-lg-12">
                    <h4>Rezervasyon Yap</h4>
                </div>
                <div class="col-lg-6 col-sm-12">
                    <fieldset>
                        <input type="text" asp-for="FullName" placeholder="Ad Soyad">
                    </fieldset>
                </div>
                <div class="col-lg-6 col-sm-12">
                    <fieldset>
                        <input type="text" asp-for="Email" placeholder="Mail">
                    </fieldset>
                </div>
                <div class="col-lg-6 col-sm-12">
                    <fieldset>
                        <input type="text" asp-for="Phone" placeholder="Telefon">
                    </fieldset>
                </div>
                <div class="col-md-6 col-sm-12">
                    <fieldset>
                        <select value="number-guests" asp-for="Number">
                            <option value="number-guests">Ziyaretçi sayısı</option>
                            <option name="1" id="1">1</option>
                            <option name="2" id="2">2</option>
                            <option name="3" id="3">3</option>
                            <option name="4" id="4">4</option>
                            <option name="5" id="5">5</option>
                            <option name="6" id="6">6</option>
                            <option name="7" id="7">7</option>
                            <option name="8" id="8">8</option>
                            <option name="9" id="9">9</option>
                            <option name="10" id="10">10</option>
                            <option name="11" id="11">11</option>
                            <option name="12" id="12">12</option>
                        </select>
                    </fieldset>
                </div>
                <div class="col-lg-6">
                    <div id="filterDate2">
                        <div class="input-group date" data-date-format="dd/mm/yyyy">
                            <input type="text" class="form-control" asp-for="Date" placeholder="Tarih">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <fieldset>
                        <select value="time" name="time" id="time">
                            <option value="time">Zaman</option>
                            <option name="Breakfast" id="Breakfast">Kahvaltı</option>
                            <option name="Lunch" id="Lunch">Öğle Yemeği</option>
                            <option name="Dinner" id="Dinner">Akşam Yemeği</option>
                        </select>
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <textarea rows="6" asp-for="Message"></textarea>
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <button type="submit" id="form-submit" class="main-button-icon">Rezervasyon Yap</button>
                    </fieldset>
                </div>
            </div>
        </form>
    </div>
</div>