@model EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Sosyal Medya Düzenleme Sayfası</h2>
<br />
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            
            <form method="post" action="/SocialMedia/EditSocialMedia">
                
                    <div class="form-group">
                        <label for="name">Platform</label>
                        <input type="text" class="form-control" asp-for="Platform" />
                    </div>
                    <div class="form-group">
                        <label for="specialization">Url</label>
                        <input type="text" class="form-control" asp-for="Url" />
                    </div>
                    <div class="form-group">
                        <label for="specialization">Icon</label>
                        <input type="text" class="form-control" asp-for="Icon" />
                    </div>
                <input type="hidden" asp-for="ID" />
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>


