@using EntityLayer.Concrete
@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Soysal Medya Yönetim Sayfası</h2>
<br />
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
         

            <div class="table-responsive ">
                <table class="table border">
                    <thead>
                        <tr class="border-5">
                            <th>ID</th>
                            <th>Platform</th>
                            <th>Url</th>
                            <th>Icon</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                                                <tr>
                                                    <td>#</td>
                                                    <td>@item.Platform</td>
                                                    <td>@item.Url</td>
                                                    <td>@item.Icon</td>
                                                   
                                                   

                                                    <td><a href="/SocialMedia/DeleteSocialMedia/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                                    <td><a href="/SocialMedia/EditSocialMedia/@item.ID" class="btn btn-outline-success">Güncelle</a></td>
                                                </tr>
                        }
                    </tbody>
                </table>
                <a href="/SocialMedia/AddSocialMedia/" class="btn btn-outline-info">Yeni Sosyal Medya Ekle</a>
            </div>
        </div>
    </div>
</div>



