@model EntityLayer.Concrete.Chef

@{
    ViewData["Title"] = "Yeni Şef Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="text-center">Yeni Şef Ekle</h2>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
           
            <form method="post" action="/Chef/AddChef">
                <div class="form-group">
                    <span> </span>
                    <label for="name">Ad Soyad:</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input type="text" class="form-control" id="name" name="name" value="" />
                </div>
                <div class="form-group">
                    <label for="specialization">Uzmanlık:</label>
                    <input type="text" class="form-control" id="specialization" name="specialization" value="" />
                </div>
                <div class="form-group">
                    <label for="imageUrl">Görsel Yolu:</label>
                    <input type="text" class="form-control" id="imageUrl" name="imageUrl" value="" />
                </div>
                <button type="submit" class="btn btn-primary">Ekle</button>
            </form>
        </div>
    </div>
</div>
