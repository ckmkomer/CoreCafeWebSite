@model EntityLayer.Concrete.Chef

@{
    ViewData["Title"] = "EditChef";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center ">Şef Düzenleme Sayfası</h2>
<br />
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
         
            <form method="post" action="/Chef/EditChef">
                <div class="form-group">
                    <label for="name">Ad Soyad:</label>
                    <input type="text" class="form-control" id="name" name="name" value="@Model.Name" />
                </div>
                <div class="form-group">
                    <label for="specialization">Uzmanlık:</label>
                    <input type="text" class="form-control" id="specialization" name="specialization" value="@Model.Specialization" />
                </div>
                <div class="form-group">
                    <label for="imageUrl">Görsel Yolu:</label>
                    <input type="text" class="form-control" id="imageUrl" name="imageUrl" value="@Model.ImageUrl" />
                </div>
                <input type="hidden" name="chefID" value="@Model.ChefID" />
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>

