    <div class="card">
        <div class="card-body">
            
            <form method="post" action="/Menu/AddMenu">
                <div class="form-group">
                    <label for="title">Başlık</label>
                    <input type="text" class="form-control" id="ımageurl" name="title" value="" />
                </div>
                <div class="form-group">
                    <label for="description">Açıklama</label>
                    <input type="text" class="form-control" id="description" name="description" value="" />
                </div>
                 <div class="form-group">
                    <label for="price">Fiyat</label>
                    <input type="text" class="form-control" id="price" name="price" value="" />
                </div>
                <div class="form-group">
                    <label for="ımageurl">Görsel Yolu</label>
                    <input type="text" class="form-control" id="ımageurl" name="ımageurl" value="" />
                </div>
                @*<div class="form-group">
                    <label for="ıconurl">Icon</label>
                    <input type="text" class="form-control" id="ıcon" name="ıconurl" value="" />
